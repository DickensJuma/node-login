
// preset form values if we receive a userdata object //
- user = typeof(udata) != 'undefined' ? udata : { }
// store the userId on the client side in a hidden input field //
input(type='hidden', value= user._id)#userId


#account-form-container.center-vertical
	form.card.card-body.bg-light(method='post')#account-form
		h2
		h6#sub Register.
		hr
		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Name
			.col-sm-9
				input.form-control#name-tf(type='text', name='name', value= user.name)

		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Email
			.col-sm-9
				input.form-control#email-tf(type='email', name='email', value= user.email)

		.form-group.row.margin-zero
			label.col-sm-3.col-form-label.col-form-label-sm Location
			.col-sm-9
				select.custom-select#country-list(name='country')
					each item in countries
						option(selected=item.name == user.country)= item.name

		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Username
			.col-sm-9
				input.form-control#user-tf(type='text', name='user', value= user.user).disabled

		.form-group.row.margin-zero
			label.col-sm-3.col-form-label.col-form-label-sm Password
			.col-sm-9
				input.form-control#pass-tf(type='password', name='pass', value='')
				hr
			.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm National ID
			.col-sm-9
				input.form-control#name-tf(type='id', name='id', value= user.id)

			.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Phone Number
			.col-sm-9
				input.form-control#name-tf(type='phone', name='phone', value= user.phone)

		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Station
			.col-sm-9
				input.form-control#name-tf(type='station', name='station', value= user.station)

		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Level of Education
			.col-sm-9
				input.form-control#name-tf(type='loe', name='loe', value= user.loe)

				.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Institution
			.col-sm-9
				input.form-control#name-tf(type='inst', name='inst', value= user.inst)
		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Date of Birth
			.col-sm-9
				input.form-control#dob-tf(type='dob', name='dob', value= user.dob)
		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Date of Appointment
			.col-sm-9
				input.form-control#doa-tf(type='doa', name='doa', value= user.doa)

		.form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Marital Status
			.col-sm-9
				input.form-control#status-tf(type='status', name='status', value= user.status)
	    .form-group.row
			label.col-sm-3.col-form-label.col-form-label-sm Marital Status
			.col-sm-9
				input.form-control#status-tf(type='status', name='status', value= user.status)
			








		hr
		.form-buttons
			button(type='button')#account-form-btn1.btn.btn-outline-dark
			button(type='submit')#account-form-btn2.btn.btn-primary

// display form errors in a custom modal window //

include modals/form-errors